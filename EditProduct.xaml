<Window x:Class="ImPort.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImPort"
        mc:Ignorable="d"
        Title="EditProduct" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="pic/br5.jpg"/>
    </Window.Background>
    <Canvas>
        <Canvas.Background>
            <ImageBrush/>
        </Canvas.Background>
        <TextBox Name="nameTextBox" Width="210" Height="21" RenderTransformOrigin="1.121,2.627" Canvas.Left="265" Canvas.Top="144"/>
        <TextBox Name="priceTextBox" Width="210" Height="20" Canvas.Left="265" Canvas.Top="211"/>

        <Button Name="saveButton" Width="210" Height="25" Content="Save" Click="SaveButton_Click" Canvas.Left="265" Canvas.Top="294"/>
        <Label Content="Tên Sản Phẩm" Canvas.Left="330" Canvas.Top="107" Height="32" Width="96" Foreground="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontFamily="Segoe UI Black"/>
        <Label Content="Giá Sản Phẩm" Canvas.Left="330" Canvas.Top="170" Height="32" Width="96" Foreground="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" FontFamily="Segoe UI Black"/>
    </Canvas>
</Window>
